{
  "collectionName": "components_shared_bank_details",
  "info": {
    "displayName": "Bank Details",
    "description": "Bank account information for payments"
  },
  "options": {},
  "attributes": {
    "accountHolderName": {
      "type": "string",
      "required": true
    },
    "accountNumber": {
      "type": "string",
      "required": true,
      "private": true
    },
    "sortCode": {
      "type": "string",
      "required": true,
      "private": true
    },
    "bankName": {
      "type": "string",
      "required": true
    },
    "iban": {
      "type": "string",
      "private": true
    },
    "swiftCode": {
      "type": "string",
      "private": true
    },
    "routingNumber": {
      "type": "string",
      "private": true
    },
    "accountType": {
      "type": "enumeration",
      "enum": [
        "checking",
        "savings",
        "business"
      ],
      "default": "checking"
    },
    "currency": {
      "type": "enumeration",
      "enum": [
        "GBP",
        "USD",
        "EUR",
        "CAD",
        "AUD"
      ],
      "default": "GBP"
    },
    "verified": {
      "type": "boolean",
      "default": false
    },
    "verificationDate": {
      "type": "datetime"
    }
  }
} 