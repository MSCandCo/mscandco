# MSC & Co Platform - Staging Environment with Custom Domain
# Configure these values for your staging deployment

# 🌐 CUSTOM DOMAIN CONFIGURATION (REQUIRED)
# Replace with your actual domain
BASE_DOMAIN=yourdomain.com
STAGING_DOMAIN=staging-mscco.yourdomain.com

# 🔐 SSL CERTIFICATE (Will be auto-generated)
STAGING_CERTIFICATE_ARN=

# 🌍 DNS CONFIGURATION
# Your Route 53 Hosted Zone ID (find in AWS Route 53 console)
HOSTED_ZONE_ID=

# 🔑 AUTH0 CONFIGURATION (Copy from production)
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your_client_id
AUTH0_CLIENT_SECRET=your_client_secret
AUTH0_AUDIENCE=

# 🔒 NEXTAUTH CONFIGURATION
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://staging-mscco.yourdomain.com

# 💳 STRIPE CONFIGURATION (Use test keys for staging)
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# 📧 EMAIL CONFIGURATION
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# 📊 ANALYTICS (Optional)
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# 🏗️ AWS INFRASTRUCTURE
AWS_REGION=us-east-1
S3_BUCKET_PREFIX=msc-co-staging
CLOUDFRONT_DISTRIBUTION_ID=

# 🚀 DEPLOYMENT SETTINGS
NODE_ENV=staging
DEPLOYMENT_STAGE=staging
API_VERSION=v1

# 🔧 FEATURE FLAGS
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true
ENABLE_DEBUG_LOGGING=false
ENABLE_RATE_LIMITING=true

# 📝 LOGGING
LOG_LEVEL=info
LOG_FORMAT=json

# 🔄 CORS SETTINGS
CORS_ORIGINS=https://staging-mscco.yourdomain.com,http://localhost:3002
CORS_CREDENTIALS=true